---
const { title, description } = Astro.props;
---

<section class="flex flex-col justify-center items-center gap-2">
  <div class="relative" data-aos="fade-up">
    <img
      src="/contact-title.svg"
      alt="contact-title"
      class="block w-[540px] h-auto"
    />
    <h1
      class="text-2xl md:text-3xl lg:text-4xl text-white font-black whitespace-nowrap absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2"
    >
      {title}
    </h1>
  </div>
  <p
    class="text-center text-xl md:text-2xl font-bold text-black/40"
    data-aos="fade-up"
  >
    {description}
  </p>
</section>
